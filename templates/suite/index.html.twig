{% extends 'base.html.twig' %}

{% block title %}Suite index{% endblock %}

{% block body %}
    <h1>Suite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>MainImage</th>
                <th>Price</th>
                <th>ImageGallery</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for suite in suites %}
            <tr>
                <td>{{ suite.id }}</td>
                <td>{{ suite.title }}</td>
                <td>{{ suite.mainImage }}</td>
                <td>{{ suite.price }}</td>
                <td>{{ suite.imageGallery ? suite.imageGallery|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_suite_show', {'id': suite.id}) }}">show</a>
                    <a href="{{ path('app_suite_edit', {'id': suite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_suite_new') }}">Create new</a>
{% endblock %}
