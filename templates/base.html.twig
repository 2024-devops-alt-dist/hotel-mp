<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Hôtel Clair de Lune{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
        {% endblock %}
    </head>

    <body>
        <div class="banner">
            <div class="navbar">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/hotel">Hotels</a></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                    {% else %}
                        <li><a href="{{ path('app_user_new') }}">Inscription</a></li>
                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <div class="content">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
        {% endblock %}
    </body>
</html>
